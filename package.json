{
  "name": "nuxt-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Nuxt in TypeScript with Vuetify boilerplate.",
  "author": "tmtm75",
  "private": false,
  "license": "MIT",
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "start": "nuxt-ts start",
    "generate": "TARGET=static nuxt-ts generate",
    "clean": "rm -rf dist",
    "serve": "python3 -m http.server --directory ./dist",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "format": "prettier --write '**/*.{js,ts,vue}'",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^2.0.1",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxt/types": "^2.14.12",
    "@nuxt/typescript-build": "^2.0.4",
    "@nuxtjs/vuetify": "^1.11.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^4.19.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^4.0.0"
  }
}
